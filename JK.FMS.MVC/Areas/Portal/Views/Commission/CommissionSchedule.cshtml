        function CommissionScheduleCustomerDetail(custId) {

            var jData = {
                customerId: custId
            }
            $.ajax({
                type: "GET",
                url: '@Url.Action("GetCommissionScheduleCustomerData", "Commission", new { area = "Portal" })',
                data: jData,
                success: function (data) {                    
                    $('#spncustomernumber').html(data.CustomerNumber);
                    $('#spncustomerAddress').html(data.Address1 + ', ' + data.City + ', ' + data.State + ' ' + data.PostalCode);
                    $('#spncustomerName').html(data.CustomerName);

