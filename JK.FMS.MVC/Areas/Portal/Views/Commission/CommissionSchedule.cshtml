@section scripts{
    <script type="text/javascript">


        applyMaskCurrency('#txtContractAmount');
        applyMaskCurrency('#txtBonusAmount');

         applyAutoSeacrh();
        function applyAutoSeacrh() {

            $.ajax({
                type: "GET",
                url: '@Url.Action("GetAllCustomer", "Customer", new { area = "Portal" })',
                data: {},
                success: function (data) {

                    var typeaheadSource = [];
                    $.each(data, function (key, value) {
                        typeaheadSource.push({ id: value.CustomerId, name: value.CustomerNo + ' ' + $.trim(value.Name) })
                    });
                    var box = $('#csearch-box').data('typeahead');
                    if (box != null) {                        
                        box.source = typeaheadSource;
                    }
                    else {
                        $('#csearch-box').typeahead({
                            source: typeaheadSource,
                            updater: function (item) {                                
                                CommissionScheduleCustomerDetail(item.id);
                                //redirect(item.id);
                                return item;
                            },
                            minLength: 1
                        }).focus();
                    }
                }
            });
        }



        $('#chkApplyBonus').click(function () {
            
            if ($(this).is(':checked')) {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetAdditionalBonusAmount", "Commission", new { area = "Portal" })?Amount=' + $('#txtContractAmount').val(),
                    data: {},
                    success: function (data) {
                        $('#txtBonusAmount').val(data);
                    }
                });
                //$('#txtBonusAmount').prop('readonly', false);
                $('#txtExplanation').prop('readonly', false);
                $('#txtDescription').prop('readonly', false);
            } else {
                $('#txtBonusAmount').val(0);
                $('#txtExplanation').val('');
                $('#txtDescription').val('');
                $('#txtBonusAmount').prop('readonly', true);
                $('#txtExplanation').prop('readonly', true);
