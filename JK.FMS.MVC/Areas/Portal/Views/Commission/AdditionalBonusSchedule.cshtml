@{
    ViewBag.Title = "Commission Compensation Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <style>
        .close {
            background-image: url(/Content/admin/assets/global/img/stick_close.png) !important;
            height: 12px !important;
            width: 12px !important;
            margin-top: 0px !important;
        }

        .btn.multiselect {
            text-align: left;
        }

        .multiselect .caret {
            right: 0;
            position: absolute;
            margin-top: 8px;
            margin-right: 8px;
        }

        .row {
            margin: 0;
            padding: 3px 0;
        }

        .page-size {
            padding-left: 0;
            padding-right: 0;
            width: 62px;
        }

        .topheader {
            font-size: 14px;
            font-weight: bold;
            color: #FFF !important;
            text-transform: uppercase;
            margin-top: 3px;
        }

        .alignRight {
            text-align: right;
        }

        .alignCenter {
            text-align: center;
        }

        #CustomerList th {
            vertical-align: middle;
        }

        .no-padding {
            padding: 0;
        }

        .no-margin {
            margin: 0;
        }

        .padding-tb1 {
            padding-top: 1px;
            padding-bottom: 1px;
        }

        .margin-tb1 {
            margin-top: 1px;
            margin-bottom: 1px;
        }

        .custom-listbox .headerbox {
            padding: 3px 0px 3px 5px;
        }

        .custom-listbox {
            margin-top: 4px;
            margin-bottom: 0px;
        }

        .btn.multiselect {
            text-align: left;
            padding-top: 4px;
            padding-bottom: 4px;
            font-size: 11px;
            color: #555;
        }

        .multiselect .caret {
            right: 0;
            position: absolute;
            margin-top: 8px;
            margin-right: 8px;
        }

        .multiselect-container.dropdown-menu {
            text-transform: none;
            font-size: 14px;
        }

        .contract {
            text-align: right;
        }

        .tablebox .table-responsive {
            min-height: 600px;
        }

        #AdditionalBonusScheduleList tbody th, #AdditionalBonusScheduleList tbody td {
            padding: 8px 10px !important;
        }

        #AdditionalBonusScheduleList thead th {
            font-size: 11px !important;
            padding: 8px 10px !important;
        }
    </style>
}

<div class="headerbox">
    <div class="row" style="background-color: #3598DC;color: #fff;">
        <div class="col-md-12 no-padding">
            <div class="alignCenter">
                <div class="col-md-4" style="text-align:right;">
                </div>
                <div class="col-md-4 topheader">
                    Additional Bonus Schedule
                </div>
                <div class="col-md-4" style="padding-right:5px;">
                    <div class="col-md-7 pull-right no-padding">
                        <div style="display:table-cell;padding-right: 5px;">

                        </div>
                        <div style="display:table-cell;width:100%;">
                            <button type="button" name="btnAddCommissionCompensationSchedule" id="btnAddCommissionCompensationSchedule" class="btn red dropdown-toggle pull-right subsectionBtn"
                                    style="padding: 3px 12px;">
                                <i class="fa fa-plus"></i>&nbsp;<span class="hidden-sm hidden-xs">Add New</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="tablebox">
    <div class="table-responsive" id="divcustomerList" style="background-color:#ffffff;">
        <table class="table table-striped table-bordered table-hover order-column dataTable no-footer" id="AdditionalBonusScheduleList" style="margin-top:0 !important;">
            <thead>
                <tr>
                    <th style="text-align:center;vertical-align:middle;">
                        Total Monthly Contracts Values
                    </th>
                    <th style="text-align:center;vertical-align:middle;">
                        Additional Monthly Bonus Payble to Employee
                    </th>                   
                    <th style="text-align:center;width:100px;vertical-align:middle;">
                        Status
                    </th>
                    <th style="text-align:center;width:100px;vertical-align:middle;">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<div class="modal fade custom-model custom-form-design" id="ModalAdditionalBonusSchedulePopup" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width:600px">
        <div class="modal-content" style="border-radius: 0px;" id="RenderAdditionalBonusSchedule">
            <div class="modal-header headerbox list" style="padding:0px!important;border-bottom: none;">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top: 12px !important;margin-right: 12px !important;"></button>
                <h4 class="modal-title text-center" style="margin-top: 0px; margin-bottom: 4px;  padding: 7px!important;font-size: 12px;font-weight: bold;background: #3598DC !important;color: #FFF !important;border: 1px solid #3598DC !important;padding: 0px;text-transform: uppercase;">
                    Additional Bonus Schedule
                </h4>
            </div>
            <div class="modal-body form form-horizontal" style="padding-top: 1px;margin-top: -5px;">
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-4">Total Monthly Contract Amount Range :</label>
                                <div class="col-md-3">
                                    <input type="text" class="form-control input-sm" id="txtCTRangeStart" name="txtCTRangeStart" value="" />
                                </div>
                                <div class="col-md-1" style="padding: 5px;">
                                    to
                                </div>
                                <div class="col-md-3">
                                    <input type="text" class="form-control input-sm" id="txtCTRangeEnd" name="txtCTRangeEnd" value="" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-4">Bonus Amount :</label>
                                <div class="col-md-3">
                                    <input type="text" class="form-control input-sm" id="txtCTAmount" name="txtCTAmount" value="" />
                                </div>

                            </div>
                        </div>



                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-4">Status :</label>
                                <div class="col-md-3">

                                    <select class="form-control input-sm" id="CTStatuslist">
                                        <option value="">Select</option>
                                        @foreach (var item in (SelectList)ViewBag.statusList)
                                        {
                                            <option @(item.Selected ? "selected" : "") value="@item.Value">@item.Text</option>
                                        }
                                    </select>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="form-actions" style="padding: 7px;">
                    <div class="col-md-12">

                        <button type="button" name="Cancel" id="btnCancelAdditionalBonusSchedule" class="btn btn-primary button-next pull-right" onclick="" style="margin-right:0px;min-width: 90px;">Cancel</button>
                        <button type="button" name="Save" id="btnSaveAdditionalBonusSchedule" class="btn btn-primary button-next pull-right" onclick="" style="margin-right:10px;min-width: 90px;">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section pageplugins{

    <script src="@Url.Content("~/Content/admin/assets/global/plugins/moment.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/plugins/bootstrap-typeahead/bootstrap3-typeahead.min.js")" type="text/javascript"></script>
}
@section scripts{
    <script type="text/javascript">
        var _AdditionalBonusScheduleId = 0;
        $('#btnAddCommissionCompensationSchedule').click(function () {
            _AdditionalBonusScheduleId = 0;            
            $('#CTStatuslist').val(42);
            $('#txtCTAmount').val(0);
            $('#txtCTRangeEnd').val(0);
            $('#txtCTRangeStart').val(0);
            $("#ModalAdditionalBonusSchedulePopup").modal({ backdrop: 'static' });
        });
        function ShowAdditionalBonusScheduleMaintenance(StatusListId,CompAmount, RangeStart, RangeEnd, AdditionalBonusScheduleId) {
            _AdditionalBonusScheduleId = AdditionalBonusScheduleId;            
            $('#CTStatuslist').val(StatusListId);   
            $('#txtCTAmount').val(CompAmount);
            $('#txtCTRangeEnd').val(RangeEnd);
            $('#txtCTRangeStart').val(RangeStart);
            $("#ModalAdditionalBonusSchedulePopup").modal({ backdrop: 'static' });
        }

        function DeleteAdditionalBonusScheduleMaintenance(AdditionalBonusScheduleId) {
             $.ajax({
                    type: "GET",
                 url: '@Url.Action("DeleteAdditionalBonusScheduleData", "Commission", new { area = "Portal" })?CompensationScheduleId=' + AdditionalBonusScheduleId,
                    data: {},
                    success: function (data) {
                        BindAdditionalBonusScheduleList(data);
                        
                    }
            });

        }
        
        function BindAdditionalBonusScheduleList(res) {
            var listItem = $('#AdditionalBonusScheduleList tbody');
            listItem.html('');
            res.forEach(function (item) {
                trData = "<tr>";
                trData += '<td style="text-align: center;">$ ' + addCommas(item.RangeStartAmount) + '  to  $ ' + addCommas(item.RangeEndAmount) + '</td>';
                trData += '<td style="text-align: center;">' + '$ ' + addCommas(item.Amount) + '</td>';
                trData += '<td style="text-align: center;">' + item.StatusListName + '</td>';
                trData += '<td style="text-align: center;"><a href="javascript:void(0)" onclick="ShowAdditionalBonusScheduleMaintenance(';
                trData += item.StatusListId + ",";                
                trData += item.Amount + ",";
                trData += item.RangeStartAmount + ",";
                trData += item.RangeEndAmount + ",";
                trData += item.CommissionAdditionalBonusScheduleId;                
                trData += ')">Edit</a>';
                trData += '&nbsp;&nbsp;&nbsp;<a href="javascript:void(0)" onclick="DeleteAdditionalBonusScheduleMaintenance(';
                trData += item.AdditionalBonusScheduleId;
                trData += ')">Delete</a></td></tr>';
                listItem.append(trData);
            });

        }

        $('#btnSaveAdditionalBonusSchedule').click(function () {



            var jData = {
                AdditionalBonusScheduleId: _AdditionalBonusScheduleId,
                StatusListId: $('#CTStatuslist').val(),
                IsActive: ($('#CTStatuslist').val() == 42 ? true : false),                
                CompAmount: $('#txtCTAmount').val(),
                RangeEnd: $('#txtCTRangeEnd').val(),
                RangeStart: $('#txtCTRangeStart').val()
            };


            $.ajax({
                type: "GET",
                url: '@Url.Action("InsertUpdateAdditionalBonusScheduleData", "Commission", new { area = "Portal" })',
                data: jData,
                success: function (data) {
                    BindAdditionalBonusScheduleList(data);
                    
                    _AdditionalBonusScheduleId = 0;
                    $("#ModalAdditionalBonusSchedulePopup").modal('hide');
                }
                });

            $("#ModalAdditionalBonusSchedulePopup").modal({ backdrop: 'static' });
        });


        $('#btnCancelAdditionalBonusSchedule').click(function () {

            _AdditionalBonusScheduleId = 0;
            $("#ModalAdditionalBonusSchedulePopup").modal('hide');
        });

        var _AdditionalBonusSchedule = {};
        $(document).ready(function () {

            $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetAdditionalBonusScheduleData", "Commission", new { area = "Portal" })',
                    data: {},
                    success: function (data) {
                        BindAdditionalBonusScheduleList(data);
                        
                    }
            });
            maskCurrency('txtCTAmount');
            maskCurrency('txtCTRangeEnd');
            maskCurrency('txtCTRangeStart');
        });


        function maskCurrency(id) {
            $('#' + id).inputmask("currency", {
                alias: 'currency',
                prefix: '$ ',
                digits: 2,
                autoUnmask: true,
                removeMaskOnSubmit: true,
                unmaskAsNumber: true,
                allowPlus: false,
                allowMinus: false,
                autoGroup: true,
                groupSeparator: ","
            });
        }
        function maskPercentage(id) {
            $('#' + id).inputmask("numeric", {
                radixPoint: ".",
                groupSeparator: ",",
                autoGroup: true,
                suffix: " %",
                rightAlign: true,
                autoUnmask: true,
                removeMaskOnSubmit: true,
                clearMaskOnLostFocus: false,
                oncleared: function () { self.Value(''); }
            });
        }
        function applyMaskNumber(id) {
            $(id).inputmask("numeric", {
                autoUnmask: true,
                removeMaskOnSubmit: true,
                oncleared: function () { self.Value(''); }
            });
        }
        function addCommas(nStr) {
            nStr += '';
            x = nStr.split('.');
            x1 = x[0];
            x2 = x.length > 1 ? '.' + x[1] : '';
            var rgx = /(\d+)(\d{3})/;
            while (rgx.test(x1)) {
                x1 = x1.replace(rgx, '$1' + ',' + '$2');
            }
            return x1 + x2;
        }
    </script>


}

