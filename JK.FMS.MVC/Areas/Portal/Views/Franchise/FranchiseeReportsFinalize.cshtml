

@{
    ViewBag.Title = "Chargeback Letters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    
}
<div class="row">
    <div class="col-md-12">
        <div class="jkcustom-page-title">
            Finalize Reports
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="portlet box blue" style="width:450px;margin:0 auto;">
        <div class="portlet-body form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <table border="0" cellpadding="0" cellspacing="0" align="center" class="jkcustom-form-table">
                       
                        <tr>
                            <td style="vertical-align: middle; width:150px;text-align:right;"><label>Bill Month/Year<span class="required">*</span></label></td>
                            <td>
                                @Html.DropDownList("BillMonth", new SelectList(ViewBag.billMonthsList, "Value", "Text"), new { @style = "width:105px;" })
                                @Html.DropDownList("BillYear", new SelectList(ViewBag.billYearList, "Value", "Text"), new { @style = "width:105px;" })
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="form-actions text-center">
                    <button type="submit" class="btn green">Finalize</button>
                </div>
            }
        </div>
    </div>
</div>
