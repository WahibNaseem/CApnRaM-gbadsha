@model JKViewModels.Franchisee.FMTDetailViewModel

@section styles{
    <link href="@Url.Content("~/Content/admin/assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/admin/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        tr > td {
            font-size: 12px !important;
            padding: 4px !important;
        }

        /*tr > th {
            font-size: 11px !important;
            text-transform: uppercase;
        }*/

        .row {
            margin: 0;
            padding: 5px 0;
        }

        .opendiv {
            padding: 4px;
            background-color: gold;
            text-align: center;
            font-weight: bold;
            color: #ffffff;
        }

        .closeddiv {
            padding: 4px;
            background-color: limegreen;
            text-align: center;
            font-weight: bold;
            color: #ffffff;
        }

        .overpaiddiv {
            padding: 4px;
            background-color: deepskyblue;
            text-align: center;
            font-weight: bold;
            color: #ffffff;
        }

        .overduediv {
            padding: 4px;
            background-color: orangered;
            text-align: center;
            font-weight: bold;
            color: #ffffff;
        }

        .btn {
            padding: 3px 12px;
            font-size: 12px;
        }
    </style>
}
<div class="modal fade custom-model custom-form-design" id="modal_FMTDetail" tabindex="-1" role="basic" aria-hidden="true" style="display: none;" draggable>
    <div class="modal-dialog" style="width:800px">
        <div class="modal-content" style="border-radius: 8px;">
            <div class="modal-header headerbox list" style="padding:0px!important;border-bottom: none;">
                <button type="button" class="close" aria-hidden="true" style="margin-top: 12px !important;margin-right: 12px !important;" onclick="btnFranchiseeManualPopupClose()"></button>
                <h4 class="modal-title" style="text-align:center;margin-top: 0px; margin-bottom: 4px;  padding: 7px!important;font-size: 12px;font-weight: bold;background: #3598DC !important;color: #FFF !important;border: 1px solid #3598DC !important;padding: 0px;border-radius: 8px 8px 0 0;text-transform: uppercase;">
                    FRANCHISEE MANUAL TRANSACTION
                </h4>
            </div>
            <div class="modal-body" style="padding: 0px 10px 15px 10px;">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-body">
                            <div class="row" style="padding: 3px;margin: 0;"><b>Franchisee No: : @Html.DisplayFor(one => one.FranchiseeNo)</b></div>
                            <div class="row" style="padding: 3px;margin: 0;"><b>Franchisee Name: @Html.DisplayFor(one => one.FranchiseeName)</b></div>
                        </div>
                    </div>
                    <div class="col-md-3"></div>
                    <div class="col-md-4">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tr>
                                    <td class="text-right">Transaction No.</td>
                                    <td class="text-center"><span>@Html.DisplayFor(one => one.TransactionNumber)</span></td>
                                </tr>
                                <tr>
                                    <td class="text-right">Date</td>
                                    <td class="text-center"><span>@Html.DisplayFor(one => one.Dateformat)</span></td>
                                </tr>
                                <tr>
                                    <td class="text-right">Status</td>
                                    <td class="text-center"><span>@Html.DisplayFor(one => one.TrXStatus)</span></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered table-hover order-column table-responsive" width="100%">
                            <thead>
                                <tr>
                                    <th style="width:110px;text-align:center;font-size: 10px !important;font-weight: normal;">Trx Type</th>
                                    <th style="width:200px;text-align:center;font-size: 10px !important;font-weight: normal;">Description</th>
                                    <th style="text-align:center;width: 20px;font-size: 10px !important;font-weight: normal;">ReSell</th>
                                    <th style="width:55px;text-align:center;font-size: 10px !important;font-weight: normal;">Qty.</th>
                                    <th style="width:100px;text-align:center;font-size: 10px !important;font-weight: normal;">Item Amount</th>
                                    <th style="width:100px;text-align:center;font-size: 10px !important;font-weight: normal;">SubTotal</th>
                                    <th style="width:65px;text-align:center;font-size: 10px !important;font-weight: normal;">Tax</th>
                                    <th style="width:100px;text-align:center;font-size: 10px !important;font-weight: normal;">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="text-align:center;font-size: 11px !important;">@Html.DisplayFor(one => one.TrxType)</td>
                                    <td style="text-align:center;font-size: 11px !important;">@Html.DisplayFor(one => one.DetailDescription)</td>
                                    <td style="white-space:pre-line;text-align:center;font-size: 11px !important;">@Html.DisplayFor(one => one.reSellName)</td>
                                    <td style="text-align:center;font-size: 11px !important;">@Html.DisplayFor(one => one.Quantity)</td>
                                    <td style="text-align:right;font-size: 11px !important;">$@Html.DisplayFor(one => one.DistributionAmount)</td>
                                    <td style="text-align:right;font-size: 11px !important;">$@Html.DisplayFor(one => one.ExtendedPrice)</td>
                                    <td style="text-align:right;font-size: 11px !important;">$@Html.DisplayFor(one => one.TotalTax)</td>
                                    <td style="text-align:right;font-size: 11px !important;">$@Html.DisplayFor(one => one.Total)</td>
                                </tr>
                            </tbody>
                            <tfoot>

                                <tr>
                                    <td colspan="7" style="text-align:right;">Total</td>

                                    <td style="text-align:right;padding-right: 7px;">$@Html.DisplayFor(one => one.Total)</td>
                                </tr>


                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 text-right">
                        NOTE:
                    </div>
                    <div class="col-md-9 text-right">
                        @*<textarea class="form-control input-sm" , rows="3"></textarea>*@
                        @Html.TextAreaFor(one => one.FranchiseeManualTransactionDescription, new { @class = "form-control input-sm", rows = "3" })
                    </div>
                </div>

                <hr />
                <div class="row">
                    <div class="col-md-5">
                        <button type="button" class="btn btn-primary button-next" style="margin-right:10px;" onclick="PrintFMT()">Print <i class="fa fa-print"></i></button>
                        <button type="submit" class="btn btn-primary button-next" style="margin-right:10px;display:none;" onclick="ExportFMTToPDF()">Export PDF <i class="fa fa-download"></i></button>
                    </div>
                    <div class="col-md-4"></div>
                    <div class="col-md-3" style="padding-left:30px;">
                        <button type="button" class="btn btn-primary button-next" onclick="btnFranchiseeManualEditPopup('@Model.TransactionNumber.Trim()','@Model.Dateformat')">
                            Edit
                            <i class="fa fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-primary button-next  pull-right" onclick="btnFranchiseeManualPopupClose()">
                            Close
                            <i class="fa fa-close"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

