@model JKViewModels.Franchisee.FullFranchiseeViewModel
@{
    ViewBag.Title = "Franchisee Owner";
    Layout = null;
}
<style>
    .errormsg {
        border-color: red;
    }
</style>



    <div class="modal-dialog" style="max-width:800px;">
        @using (Html.BeginForm("addEditFranchiseeMainContact", "Franchise", FormMethod.Post, new { @id = "add-franchiseeowner", @role = "form" }))
        {

        @Html.HiddenFor(one => one.FranchiseeIdByOwner)


        @Html.HiddenFor(one => one.ContactInfo.ContactId)
        @Html.HiddenFor(one => one.ContactInfo.Name)
        @Html.HiddenFor(one => one.ContactInfoPhone.Phone1)
        @Html.HiddenFor(one => one.ContactInfoPhone.PhoneExt)
        @Html.HiddenFor(one => one.ContactInfoPhone.PhoneId)
        @Html.HiddenFor(one => one.ContactInfoEmail.EmailAddress)
        @Html.HiddenFor(one => one.ContactInfoEmail.EmailId)
        <input type="hidden" value="@Model.ContactInfo.ContactId" id="hdnContactId" />
        <input type="hidden" value="@Model.ContactInfoPhone.PhoneId" id="hdnPhoneId" />
        <input type="hidden" value="@Model.ContactInfoEmail.EmailId" id="hdnEmailId" />

        <div class="modal-content" style="border-radius: 8px;">
            <div class="modal-header headerbox list" style="padding:0px!important;">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top: 12px !important;margin-right: 12px !important;"></button>*@
                <h4 class="modal-title" style="margin-top: 0px; margin-bottom: 4px;  padding: 7px!important;font-size: 12px;font-weight: bold;background: #3598DC !important;color: #FFF !important;border: 1px solid #3598DC !important;padding: 0px;border-radius: 8px 8px 0 0;text-transform: uppercase;">MAIN CONTACT</h4>
            </div>
            <div class="modal-body" style="padding: 15px 15px 15px 35px;min-height: 190px;">
                <div class="form-group col-md-12">
                    <label class="control-label col-md-2">
                        Name
                    </label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(o => o.ContactInfo.Name, new { @class = "form-control input-sm", @id= "ContactInfo_NameModel" })
                    </div>

                </div>
                <div class="form-group  col-md-12">
                    <label class="control-label col-md-2">
                        Phone
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.ContactInfoPhone.Phone1, new { @class = "form-control input-sm" , id = "ContactInfoPhone_Phone1Model" })
                    </div>
                    <label class="control-label col-md-1 text-right">
                        Ext
                    </label>
                    <div class="col-md-1">
                        @Html.TextBoxFor(o => o.ContactInfoPhone.PhoneExt, new { @class = "form-control input-sm", id = "ContactInfoPhone_PhoneExtModel" })
                    </div>
                </div>
                <div class="form-group  col-md-12">
                    <label class="control-label col-md-2">
                        Cell
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.ContactInfoPhone.Cell, new { @class = "form-control input-sm", id = "ContactInfoPhone_CellModel" })
                    </div>
                </div>
                <div class="form-group  col-md-12">
                    <label class="control-label col-md-2">
                        Email
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(o => o.ContactInfoEmail.EmailAddress, new { @class = "form-control input-sm", type = "email", id = "ContactInfoEmail_EmailAddressModel" })
                    </div>
                </div>

            </div>
            <div class="modal-footer" style="padding-right: 40px;">
                <button type="button" onclick="addEditFranchiseeMainContact()" class="btn btn-primary">Save </button>
                <button type="button" class="btn btn-primary button-next pull-right" id="btnEditOwnerCancel" style="margin-right:5px;" onclick="ClickEditFranchiseeMainContact()">
                    Cancel
                </button>
                <!-- /.modal-content -->
            </div>
        </div>
        }
    </div>



<script type="text/javascript">

    function ClickEditOwnerCancell() {
        $('#modalAddEditOwnerData').modal("hide");
    }

    $(document).ready(function () {
        $('#ContactInfoPhone_CellModel').inputmask("mask", {
            "mask": "(999) 999-9999"
        });
        $('#ContactInfoPhone_Phone1Model').inputmask("mask", {
            "mask": "(999) 999-9999"
        });

    });


</script>

