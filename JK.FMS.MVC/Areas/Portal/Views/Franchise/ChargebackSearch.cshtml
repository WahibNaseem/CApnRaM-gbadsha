

@{
    ViewBag.Title = "Chargeback Letters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <style type="text/css">
        .jkcustom-page-title {
            font-size: 18px;
            padding: 3px;
            color: #fff !important;
            background: #3598dc !important;
            text-align: center;
            margin-bottom: 10px;
        }

        .jkcustom-form-table {
            width: 100%;
        }

            .jkcustom-form-table tr {
            }

                .jkcustom-form-table tr > td {
                    padding-bottom: 3px;
                    padding-top: 3px;
                }

                    .jkcustom-form-table tr > td.heading {
                        font-size: 18px;
                        font-weight: 300;
                        font-family: "Open Sans",sans-serif;
                        margin-top: 5px;
                        margin-bottom: 5px;
                        color: inherit;
                        text-align: left;
                    }

                    .jkcustom-form-table tr > td > hr {
                        margin: 7px 0;
                    }

                .jkcustom-form-table tr > td {
                    padding-bottom: 3px;
                    padding-top: 3px;
                }

                    .jkcustom-form-table tr > td > label {
                        margin-right: 8px;
                    }

                        .jkcustom-form-table tr > td > label .required {
                            color: red;
                        }




                    .jkcustom-form-table tr > td > input[type="text"] {
                        border: solid #999 1px;
                        vertical-align: bottom;
                        font-size: 13px;
                        padding: 3px;
                    }

                    .jkcustom-form-table tr > td > select {
                        border: solid #999 1px;
                        vertical-align: bottom;
                        font-size: 13px;
                        padding: 3px;
                    }






        .form-group.form-md-line-input {
            position: relative;
            margin: 0 0 15px;
            padding-top: 20px;
        }
    </style>
}
<div class="row">
    <div class="col-md-12">
        <div class="jkcustom-page-title">
            Chargeback Search
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="portlet box blue" style="width:450px;margin:0 auto;">
        <div class="portlet-body form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-body">
                    <table border="0" cellpadding="0" cellspacing="0" align="center" class="jkcustom-form-table">

                        <tr>
                            <td style="vertical-align: middle; width:150px;text-align:right;"><label>Franchise No</label></td>
                            <td>
                                @Html.TextBox("txtfranchiseno","", new { @style = "width:105px;"})
                            </td>

                        </tr>
                        <tr>
                            <td style="vertical-align: middle; width:150px;text-align:right;"><label>Bill Month/Year</label></td>
                            <td>                           
                               @Html.DropDownList("BillMonth", new SelectList(ViewBag.billMonthsList, "Value", "Text"), new { @style = "width:105px;" })
                                @Html.DropDownList("BillYear", new SelectList(ViewBag.billYearList, "Value", "Text"), new { @style = "width:105px;" })
                            </td>

                        </tr>

                    </table>
                </div>
                <div class="form-actions text-center">
                    <button type="submit" class="btn green">Search</button>
                </div>
            }
        </div>
    </div>
</div>
