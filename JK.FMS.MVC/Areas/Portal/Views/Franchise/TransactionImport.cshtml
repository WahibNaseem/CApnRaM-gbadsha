@model IEnumerable<JKViewModels.Franchise.TransactionFranchisePending>

@{
    ViewBag.Title = "Franchise Import Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="row">
    <section class="col-md-12 col-md-push-0">
        <div class="portlet light ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-layers"></i>
                    <span class="caption-subject sbold uppercase">Franchisee Transaction Import</span>
                </div>
            </div>
            <div class="portlet-body">

                <div class="form-body">
                    <div class="row">
                        <form action="#">
                            <input type="hidden" id="hdnfranchiseeid" name="hdnfranchiseeid" value="0">
                            <div class="col-md-12">


                                <div class="row">
                                    <div class="col-lg-offset-3 col-md-6">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="form_control_1">
                                                    Bill Month/Year <b>7/2017</b>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-offset-3 col-md-6">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                               
                                                    <input type="file" class="default" name="name" value="" />
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <div class="btn-set">
                                                    <button type="submit" class="btn green">Submit</button>
                                                    <button type="button" class="btn default">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="row" id="divfranchisetransList">
                                    <hr />
                                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="franchiseList">
                                        <thead>
                                            <tr>
                                                <th style="width: 80px;">Region</th>
                                                <th>Franchisee Trx Count</th>
                                                <th>Customer Trx Count</th>
                                                <th>Total</th>
                                                <th>Imported Date</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>



                                            @foreach (var item in Model)
                                                        {
                                                        <tr class="odd gradeX">
                                                            <td>St Louis</td>
                                                            <td><a href="">28</td>
                                                            <td><a href="">8</td>
                                                            <td>$1,841.15</td>
                                                            <td>9/25/2015 05:01 PM</td>
                                                            <td>Edit</td>
                                                        </tr>
                                                        }

                                        </tbody>
                                    </table>
                                </div>


                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>

    </section>
</div>

<link href="~/Content/admin/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" />
<script src="~/Content/admin/assets/global/plugins/datatables/datatables.all.min.js"></script>
<script>


    $(document).ready(function () {

        $('#franchiseList').DataTable({
            destroy: true,
            "dom": "<'row'<'col-md-8 col-sm-12'><'col-md-4 col-sm-12'<'table-group-actions pull-right'>>r><'table-responsive't><'row'<'col-sm-12 dompagination'pli><'col-md-4 col-sm-12'>>", // datatable layout

            //"dom": "<r><'table-responsive't><'row'<'col-md-8 col-sm-12'pli><'col-md-4 col-sm-12'>>", // datatable layout
            "autoWidth": false,
            "pageLength": 15, // default records per page
            "paging": true,
            "sorting": true,
            "language": {
                "lengthMenu": "<span class='seperator'>|</span>View _MENU_ Records",
                "info": "<span class='seperator'>|</span>Found total _TOTAL_ records",
                //"infoEmpty": "<span class='seperator'>|</span>No records found to show",
                "emptyTable": "No data available in table",
                "zeroRecords": "No matching records found",
            },

            "pagingType": "bootstrap_extended",
            "bSort": true,


        });

    });



</script>