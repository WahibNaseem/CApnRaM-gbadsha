@model IEnumerable<JKViewModels.Franchise.TransactionFranchisePending>

@{
    ViewBag.Title = "Franchise Pending Transactions";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="row">
    <section class="col-md-12 col-md-push-0">
        <div class="portlet light ">

            <div class="portlet-body">

                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="franchiseList">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Franchisee No.</th>
                            <th>Franchisee</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Date</th>
                            <th>Quantity</th>
                            <th style="text-align:right">Unit Price</th>
                            <th style="text-align:right">Tax</th>
                            <th style="text-align:right">Total</th>
                            <th>Result</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>



                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>@Html.DisplayFor(modelItem => item.number)</td>
                                <td><a href="">@Html.DisplayFor(modelItem => item.name)</a></td>
                                <td><a href="">@Html.DisplayFor(modelItem => item.trxname)</a></td>
                                <td>@Html.DisplayFor(modelItem => item.description)</td>
                                <td>@Html.DisplayFor(modelItem => item.trxdate)</td>
                                <td>@Html.DisplayFor(modelItem => item.description)</td>                                
                                <td style="text-align:right">$ @Html.DisplayFor(modelItem => item.unitprice)</td>
                                <td style="text-align:right">$ @Html.DisplayFor(modelItem => item.tax)</td>
                                <td style="text-align:right">$ @Html.DisplayFor(modelItem => item.trxtotal)</td>
                                <td></td>
                                <td>Edit</td>
                            </tr>
                        }

                    </tbody>
                </table>



            </div>
        </div>
        
    </section>
</div>
<link href="~/Content/admin/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" />
<script src="~/Content/admin/assets/global/plugins/datatables/datatables.all.min.js"></script>
