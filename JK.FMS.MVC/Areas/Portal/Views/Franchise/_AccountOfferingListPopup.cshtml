<link href="@Url.Content("~/Content/admin/assets/global/plugins/datatables/datatables.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/admin/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css")" rel="stylesheet" type="text/css" />
<div class="modal fade custom-model custom-form-design" id="modal_AccountOfferingListingDetail" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog" style="width:970px">
        <div class="modal-content" style="border-radius: 8px;">
            <div class="modal-header headerbox list" style="padding:0px!important;border-bottom: none;">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top: 12px !important;margin-right: 12px !important;"></button>
                <h4 class="modal-title" style="text-align:center;margin-top: 0px; margin-bottom: 4px;  padding: 7px!important;font-size: 12px;font-weight: bold;background: #3598DC !important;color: #FFF !important;border: 1px solid #3598DC !important;padding: 0px;border-radius: 8px 8px 0 0;text-transform: uppercase;">
                    Account Offering List
                </h4>
            </div>
            <div class="custom-form portlet light" id="">
                <div class="portlet-body">
                    @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "", @role = "form", @class = "form form-horizontal", style = "margin: 0px;" }))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <label class="control-label col-md-2" style="font-weight:600;">
                                    Franchisee No.
                                </label>
                                <div class="col-md-4">
                                    <label class="control-label col-md-4" style="width:auto;">
                                        @ViewBag.FranchiseeNo
                                    </label>
                                </div>
                                <div class="col-md-1 col-md-offset-1">
                                    <label class="control-label" style="font-weight:600;padding-left:15px;">
                                        Address
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label" style="width:auto;">
                                        @ViewBag.Address1
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label class="control-label col-md-2" style="font-weight:600;">
                                    Franchisee Name
                                </label>
                                <div class="col-md-4">
                                    <label class="control-label col-md-4" style="width:auto;">
                                        @ViewBag.FranchiseeName
                                    </label>
                                </div>
                                <div class="col-md-1 col-md-offset-1">
                                    <label class="control-label" style="font-weight:600;">
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label" style="width:auto;">
                                        @ViewBag.Address2
                                    </label>
                                </div>
                            </div>
                        </div>
                         
                        <div class="row">
                            <div class="col-md-12">
                                <hr style="margin-top:10px;margin-bottom: 10px;" />
                            </div>
                        </div>
                        <div class="custom-listbox" style="margin-bottom: -7px;margin-top: -7px;">
                            <div class="headerbox">
                                <div class="row no-padding">
                                    <div class="col-md-1 page-size">
                                        <select class="form-control input-sm" id="pageSizeOfferingList" style="padding-left:6px;">
                                            <option value="-1">All</option>
                                            <option value="100" >100</option>
                                            <option value="50">50</option>
                                            <option value="25">25</option>
                                            <option value="10" selected>10</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        
                                    </div>
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4 pull-right" style="padding-right:5px;">
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="hdnOffringFranchiseeId" value="@ViewBag.FranchiseeId" />
                        <div class="form-group">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="tblOfferingList">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:60px;padding: 5px !important;">
                                                Region
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:80px;padding: 5px !important;">
                                                Customer No
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:190px;padding: 5px !important;">
                                                Customer Name
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:95px;padding: 5px !important;">
                                                Account Type
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:70px;padding: 5px !important;">
                                                Contract Amt
                                            </th>
                                            
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:70px;padding: 5px !important;">
                                                Distance
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width: 65px;padding: 5px !important;">
                                                Offer Date
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width: 65px;padding: 5px !important;">
                                                Offer Status
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:80px;padding: 5px !important;">
                                                Offer Status Date
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width: 120px;padding: 5px !important;">
                                                Decline Reason
                                            </th>
                                            <th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:80px;padding: 5px !important;">
                                                Status
                                            </th>
                                            @*<th style="text-align:center;font-size: 11px !important;font-weight: normal;vertical-align:middle;width:0px;padding: 5px !important;">
                                                Note
                                            </th>*@
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        
                        <div class="form-actions" style="padding:5px !important;padding-top:25px !important;">                             
                            <button type="button" class="btn btn-primary  pull-right" id="btnOfferListclose" style="margin-right: 22px;" data-dismiss="modal">
                                Close
                                <i class="fa fa-angle-right"></i>
                            </button>                            
                        </div>
                    }
                    <div class="modal fade custom-model custom-form-design" id="modalDataCusContractPopup" tabindex="-1" role="basic" aria-hidden="true" style="display: none;"></div>
                </div>
            </div>

        </div>
    </div>
</div>

<script type="text/javascript">
    $(window).load(function () {         
               
    });

    $(document).ready(function () {
        $("#pageSizeOfferingList").change(function () {
            setPaging();
        });
    });

    function setPaging() {
        var z = $("#pageSizeOfferingList").val();
        var table = $("#tblOfferingList").DataTable();
        if (z > 0) {
            table.page.len(z).draw();
        }
        else if (z == -1) {
            table.page.len(table.rows().count()).draw();
        }
        else {
            table.page.page.len(25).draw();
        }
    }
</script>