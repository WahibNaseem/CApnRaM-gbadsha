@model JKViewModels.Customer.CustomerDistributionDetailsModel
@{
    Layout = null;
}
<div class="custom-form portlet light" id="" style="margin-top:0px;">
    <div class="headerbox" style="font-weight: normal;">
        <div class="col-md-12 text-center" style="font-size:15px;">
            <b> Distribution </b>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top: 5px !important;margin-right: 12px !important;"></button>
        </div>
        <div class="clearfix"> </div>
    </div>
    <div class="portlet-body" style="padding:10px;">
        <form id="EditFranchiseDetailsform_wizard_1" role="form" class="form form-horizontal">
            <div class="tab-pane active" id="tb_fr_page1">
                <div class="row">
                    <div class="col-md-12">
                        <label class="control-label col-md-2" style="font-weight:600;">
                            Customer No.:
                        </label>
                        <div class="col-md-4">
                            <label class="control-label col-md-4" style="width:auto;">
                                @Model.CustomerNo
                            </label>
                        </div>
                        <label class="control-label col-md-3" style="font-weight:600;">
                            Total Distribution:
                        </label>
                        <div class="col-md-3">
                            <label class="control-label col-md-4" style="width:auto;">
                                <text>@string.Format("{0:c}", Model.TotalDistribution)</text>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row" style="padding-bottom:15px;">
                    <div class="col-md-12">
                        <label class="control-label col-md-2" style="font-weight:600;width:109px;">
                            Customer Name:
                        </label>
                        <div class="col-md-4">
                            <label class="control-label col-md-4" style="width:auto;">
                                @Model.CustomerName
                            </label>
                        </div>
                        <div class="col-md-1 col-md-offset-1">
                            <label class="control-label" style="font-weight:600;">
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label" style="width:auto;">
                            </label>
                        </div>
                    </div>
                </div>
                <div class="custom-form portlet light custom-form-design custom-listbox">
                    <div class="tablebox">
                        <table class="table table-striped table-bordered table-hover order-column" style="width:100%;">
                            <thead>
                                <tr>
                                    <th style="text-align:center;">
                                        Franchise No.
                                    </th>
                                    <th style="text-align:center;">
                                        Franchise Name
                                    </th>
                                    <th style="text-align:center;">
                                        Service Type
                                    </th>
                                    <th style="text-align:center;">
                                        Distribution Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="tblFranchiseeFeeList">
                                @if (Model.CustomerDistributionList != null)
                                {
                                    foreach (var item in Model.CustomerDistributionList)
                                    {
                                        <tr>
                                            <td style="text-align:left;">
                                                @item.FranchiseNo
                                            </td>
                                            <td style="text-align:left;">
                                                @item.FranchiseName
                                            </td>
                                            <td style="text-align:left;">
                                                @item.ServiceType
                                            </td>
                                            <td style="text-align:right;">
                                                <text>@string.Format("{0:c}", item.DistributionAmount)</text>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    if (Convert.ToBoolean(ViewBag.isCRM) == true)
                                    {
                                        <tr>
                                            <td style="" colspan="4">
                                                <span style="color:red;text-align:center;">Distribution has not setup, Do you want to process setup?</span>
                                                <button type="button" class="btn btn-primary button-next" style="margin-left:10px;" onclick="clickonyes(@ViewBag.CustomerId)">Yes</button>
                                                <button type="button" class="btn btn-primary button-next" style="margin-left:10px;" data-dismiss="modal" onclick="">No</button>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                    <tr>
                                        <td style="" colspan="4">
                                            <span style="color:red;text-align:center;">No record found</span>
                                        </td>
                                    </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


