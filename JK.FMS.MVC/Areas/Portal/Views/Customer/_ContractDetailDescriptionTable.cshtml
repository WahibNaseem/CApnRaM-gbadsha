@{
    ViewBag.Title = "Contract Detail Description";
    Layout = null;
}

@model List<JKViewModels.Customer.ContractDetailViewModel>

<!-- BEGIN SAMPLE TABLE PORTLET-->
<div class="portlet box">

    <button type="button" class="btn red dropdown-toggle pull-right subsectionBtn" onclick="AddContractDetailDescriptionModal(0)">
        <i class="fa fa-plus"></i>&nbsp;<span class="hidden-sm hidden-xs">Add Contract Detail</span>
    </button>
    <div class="portlet-body flip-scroll">
        <table class="table table-bordered table-striped table-condensed flip-content" id="generalCustomerList">
            <thead class="flip-content">
                <tr>
                    <th width="10%">Line No </th>
                    <th width="20%">Service Type</th>
                    <th width="20%">Description</th>
                    <th width="10%">Amount</th>
                    @*<th width="10%">Fee</th>*@
                    <th width="10%">CPI</th>
                    <th width="10%">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LineNumber</td>
                            <td>@item.ServiceTypeName</td>
                            <td>@item.Description</td>
                            <td>@item.Amount </td>
                            @*<td>@item.SubjectToFees </td>*@
                            <td>@item.CPIIncrease</td>
                            <td class="numeric"> <a javascript:void(0);><i onclick="AddContractDetailDescriptionModal(@item.ContractDetailId)" class="fa fa-2x fa-edit"></i></a>
                                <a javascript:void(0);><i onclick="RemoveContractDetail(@item.ContractDetailId,@item.ContractId)" class="fa fa-2x fa-remove"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<!-- END SAMPLE TABLE PORTLET-->
