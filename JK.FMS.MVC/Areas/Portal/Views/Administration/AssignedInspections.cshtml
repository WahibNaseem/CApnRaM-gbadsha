<div class="tablebox">
    <div class="table-responsive" id="divChargeBackReportList">
        <table class="table table-striped table-bordered table-hover" id="tblAssignedInspections" style="margin-top:0 !important;">
            <thead>
                <tr>
                    <th style="width:40px;text-align:center;" class="dtable_FranchiseeNo">
                        Inspection Id
                    </th>
                    <th style="width:110px;text-align:center;" class="dtable_Inspection StatusId">
                        Customer Name
                    </th>
                    <th style="width:80px;text-align:center;" class="dtable_Inspection StatusId">
                        Franchisee Id
                    </th>
                    <th style="width:100px;text-align:center;" class="dtable_Inspection StatusId">
                        Account Type
                    </th>
                    <th style="width:110px;text-align:center;" class="dtable_Inspection StatusId">
                        Service Type
                    </th>
                    <th style="width:110px;text-align:center;" class="dtable_Inspection StatusId">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.InspectionList.Count > 0)
                {
                    for (var i = 0; i < Model.InspectionList.Count; i++)
                    {
                        <tr>
                            <td style="text-align:center;padding-left:10px !important">
                                @Model.InspectionList[i].InspectionId
                            </td>
                            <td style="text-align:center;padding-left:10px !important">
                                @Model.InspectionList[i].CustomerName
                            </td>
                            <td style="text-align:center;padding-left:10px !important">
                                @Model.InspectionList[i].FranchiseeId
                            </td>
                            <td style="text-align:center;padding-left:10px !important">
                                @Model.InspectionList[i].AccountType
                            </td>
                            <td style="text-align:center;padding-left:10px !important">
                                @Model.InspectionList[i].ServiceType
                            </td>

                            <td style="text-align:center;padding-left:10px !important">
                                <a href=@Url.Action("InspectionDetail", "Administration", new { @area = "Portal" })?id=@Model.InspectionList[i].InspectionId>Edit</a>
                                @*<a  onclick="RedirectDetail()" data-toggle="modal">Edit</a>*@
                                <a onclick="DeleteInspectionForm(@Model.InspectionList[i].InspectionId);">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

