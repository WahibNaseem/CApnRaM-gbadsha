@section scripts{
    <script>
        jQuery(document).ready(function () {


            $(".close").click(function () {
                Reset();
            });
            $(".closeA").click(function () {
                Reset();
            });



            function Reset() {
                $("#hdnTemplateQuestionId").val("0");
                $("#txtQuestion").val("");
                $("#txtQuestionType").val("");
                $("#hdnActionType").val("");
            }

            var table = $('#UserGroup');
            table.DataTable({
                "pageLength": 10, // default records per page
                "dom": "<'table-responsive't><'bottom'ip><'clear'>",
                "bInfo": false,
                "bStateSave": false,
                "fnStateSaveParams": function (oSettings, sValue) {
                    $("#UserGroup tr.filter .form-control").each(function () {
                        sValue[$(this).attr('name')] = $(this).val();
                    });

                    return sValue;
                },

            });

        });

        function Edit(id) {
            //alert($("#TemplateQuestionId_" + id).val());
            $("#hdnTemplateQuestionId").val($("#TemplateQuestionId_" + id).val());
            $("#txtQuestion").val($("#Question_" + id).val());
            $("#txtQuestionType").val($("#QuestionType_" + id).val());
            $("#hdnActionType").val("U");
        }

        function Delete(id) {
            $("#hdnTemplateQuestionId").val($("#TemplateQuestionId_" + id).val());
            $("#hdnActionType").val("D");

            //PageSubmit();
        }

        function AddEdit() {
            $("#hdnQuestionType").val($("#txtQuestionType").val());

            var IsValidQuestion = true;
            $("input.requiredValidation").each(function () {
                if ($(this).val().length == 0) {
                    $(this).addClass('error');
                    IsValidQuestion = false;
                }
                else {
                    $(this).removeClass('error');
                }
            });

            $("select.requiredValidation").each(function () {
                if ($(this).val() == "") {
                    $(this).addClass('error');
                    IsValidQuestion = false;
                }
                else {
                    $(this).removeClass('error');
                }
            });


            if (IsValidQuestion) {
                if ($("#hdnTemplateQuestionId").val() > 0)
                    $("#hdnActionType").val("U");
                else
                    $("#hdnActionType").val("I");

                PageSubmit();
            }
        }

        function PageSubmit() {
            $("#btnSubmit").click();
        }
    </script>
}




