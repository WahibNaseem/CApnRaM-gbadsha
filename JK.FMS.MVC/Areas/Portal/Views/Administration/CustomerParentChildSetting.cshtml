                                                    _rowCUST += '<input type="checkbox" relConsolidated="true" value="' + value.CustomerId + '" id="chkCustSelectedConsolidated_' + value.CustomerId + '" ' + (value.ConsolidatedInvoice == true?"checked":"") +' /></td></tr>';
