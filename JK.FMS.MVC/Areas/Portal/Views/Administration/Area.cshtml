
@{
    ViewBag.Title = "Area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" role="form" id="form_Area" action="" method="post">
    <div class="custom-form portlet light">
        <div class="headerbox">
            <div class="row">
                <div class="col-md-12 text-center">
                    Area
                </div>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-group">
                    <div class="row" style="padding-right: 16px;">
                        <div class="col-md-12 text-right">
                            <a href="javascript:;" onclick="OpenAddArea()" class="btn green button-next">
                                Add New Area
                                <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row" id="divitems">

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="modal fade in" id="modal_AddArea" tabindex="-1" role="basic" aria-hidden="true" style="display: none; padding-right: 17px;">
    <div class="modal-dialog">
        <div class="form form-horizontal">
            <div class="custom-form portlet light">
                <div class="modal-header headerbox list" style="padding:0px!important;border-bottom: none;">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top: 12px !important;margin-right: 12px !important;"></button>
                    <h4 class="modal-title text-center" style="margin-top: 0px; margin-bottom: 4px;  padding: 7px!important;font-size: 12px;font-weight: bold;background: #3598DC !important;color: #FFF !important;border: 1px solid #3598DC !important;padding: 0px;text-transform: uppercase;">
                        Add New Area
                    </h4>
                </div>
                <div class="form-body">
                    <div class="form-group" style="border:1px solid #c5c2da">
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="col-md-4 control-label">
                                    Area Name
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control input-sm" id="txtAreaName" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12" style="padding-left: 22px;background: #3598dc;padding-bottom: 2px;padding-top: 0px;">
                                <div class="input-icon  col-md-6">
                                    <i class="icon-magnifier icon-align-right" style="margin-top: 8px; padding-left: 10px;"></i>
                                    <input id="input_Search" type="text" required name="customernumber" autocomplete="off" placeholder="Search..." value="" class="form-control input-sm typeahead" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover order-column" id="tblAreaList">
                                        <thead>
                                            <tr style="background: #c3c3c3;">
                                                <th class="text-center">Item</th>
                                                <th class="text-center">Select</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center">abc</td>
                                                <td class="text-center"><input type="checkbox" class="mt-checkbox" /></td>
                                            </tr>
                                            <tr>
                                                <td class="text-center">xyz</td>
                                                <td class="text-center"><input type="checkbox" class="mt-checkbox" /></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn green" id="btnSave">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section pageplugins{
    <script src="@Url.Content("~/Content/admin/assets/global/plugins/jquery-ui/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/plugins/jquery-validation/js/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/scripts/datatable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/plugins/datatables/datatables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/scripts/app.min.js")" type="text/javascript" )"></script>
    <script src="@Url.Content("~/Content/admin/assets/pages/scripts/table-datatables-managed.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/plugins/moment.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/admin/assets/global/plugins/bootstrap-typeahead/bootstrap3-typeahead.min.js")" type="text/javascript"></script>
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#divitems').hide();

            $('#btnSave').click(function () {
                var html = $("#divitems").html();
                $('#divitems').append('<div class="col-md-4" style="padding-bottom: 7px;"><div class="col-md-12" ><div class="custom-form portlet light"><div class="headerbox"><div class="row"><div class="col-md-12" id="areaName_' + $('#txtAreaName').val() + '"></div></div></div><div class="col-md-12" style="padding:7px;background: #e3e7ea;">abc</div><div class="col-md-12" style="padding:7px;background: #e3e7ea;">xyz</div></div></div></div>');
                $('#areaName_' + $('#txtAreaName').val()).html($('#txtAreaName').val());
                $('#modal_AddArea').modal('hide');
                $('#txtAreaName').val('');
                $('#divitems').show();
            })
        });

        function OpenAddArea() {
            $("#divitems").html();
            $('#modal_AddArea').modal('show');
        }
    </script>
}
