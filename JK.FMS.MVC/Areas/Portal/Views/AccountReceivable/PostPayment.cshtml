@{
    ViewBag.Title = "PostPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-horizontal">
    <div class="custom-form portlet light">
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-1 control-label">
                                Date
                            </div>
                            <div class="col-md-2">
                                <div class="input-group date" data-date-format="mm/dd/yyyy">
                                    <input type="text" name="name" value="" class="form-control input-sm search-field search-date-field date-picker" id="dtpto" />
                                    <span class="input-group-btn">
                                        <button class="btn default search-date-field" type="button">
                                            <i class="fa fa-calendar"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-1 control-label">
                                Description
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control input-sm" id="txtDescription" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row" style="background-color: #4b85cc;color: #fff;padding-top:8px;padding-bottom:8px">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="col-md-8">
                                        <div class="input-icon">
                                            <i class="icon-magnifier icon-align-right" style="margin-top: 8px;"></i>
                                            <input type="text" placeholder="Search..." class="form-control input-sm search-field col-md-4" id="input_Search" />
                                        </div>
                                        <div id="container">
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <hr style="margin-top: 1px;margin-bottom: 8px;" />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover" id="tblPostPayment">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;width:1px;">
                                                <input type='checkbox' />
                                            </th>
                                            <th style="text-align:center;">
                                                Date
                                            </th>
                                            <th style="text-align:center;">
                                                Transaction Type
                                            </th>
                                            <th style="text-align:center;">
                                                Reference Number
                                            </th>
                                            <th style="text-align:center;">
                                                Payee
                                            </th>
                                            <th style="text-align:center;">
                                                Amount
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center"><input type='checkbox' style="margin-left: -18px;" /></td>
                                            <td class="text-center">09/15/2017</td>
                                            <td class="text-center">LockBox</td>
                                            <td class="text-center">00007411</td>
                                            <td class="text-center">Dental LLC.</td>
                                            <td class="text-center">323.07</td>
                                        </tr>
                                        <tr>
                                            <td class="text-center"><input type='checkbox' style="margin-left: -18px;" /></td>
                                            <td class="text-center">09/25/2017</td>
                                            <td class="text-center">Check Pynmt</td>
                                            <td class="text-center">00033209</td>
                                            <td class="text-center">Steel Industries</td>
                                            <td class="text-center">727.54</td>
                                        </tr>
                                        <tr>
                                            <td class="text-center"><input type='checkbox' style="margin-left: -18px;" /></td>
                                            <td class="text-center">09/26/2017</td>
                                            <td class="text-center">Credit Card Pymnt</td>
                                            <td class="text-center">00083402</td>
                                            <td class="text-center">Cindy's Restaurant</td>
                                            <td class="text-center">2713.74</td>
                                        </tr>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12" style="padding-top: 12px;">
                        <button type="button" class="btn btn-primary button-next pull-right" style="padding: 7px 20px;">Post</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        jQuery(document).ready(function () {
            $('#tblPostPayment').dataTable({
                "bProcessing": true,
                "aLengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                "pageLength": 200, // default records per page
                "dom": "<'table-responsive't>"// '<"top">rt<"bottom"lp><"clear">'
            });

            $("#input_Search").keyup(function () {
                var table = $("#tblPostPayment").DataTable();
                table.search($(this).val()).draw();
            });
        })
    </script>
}