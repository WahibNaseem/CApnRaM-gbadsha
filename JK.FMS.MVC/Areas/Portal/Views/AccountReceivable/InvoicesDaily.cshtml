@model JKViewModels.AccountReceivable.InvoicesDailyViewModel

@{
    ViewBag.Title = "Invoices Daily";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles{
    <style type="text/css">
        .jkcustom-page-title {
            font-size: 18px;
            padding: 3px;
            color: #fff !important;
            background: #3598dc !important;
            text-align: center;
            margin-bottom: 10px;
        }

        .jkcustom-form-table {
            width: 100%;
        }

            .jkcustom-form-table tr {
            }

                .jkcustom-form-table tr > td {
                    padding-bottom: 3px;
                    padding-top: 3px;
                }

        .form-group.form-md-line-input {
            position: relative;
            margin: 0 0 15px;
            padding-top: 20px;
        }
    </style>}


@using (Html.BeginForm("InvoicesDaily", "AccountReceivable", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="col-md-12">
        <div class="jkcustom-page-title">
            Customer Daily Transaction Search
        </div>
    </div>

    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="form-horizontal panel panel-default  center-body text-center">
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <strong>
                                @Html.LabelFor(model => model.dateTime, new { @class = "control-label text-center" })
                                <span class="required">*</span>
                            </strong>
                        </div>
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.dateTime, new List<SelectListItem> {
                                 new SelectListItem { Text = "-Select One-", Value = "-1"},
                                    new SelectListItem { Text = "Jun 21 2017 6:53AM", Value = "1"},
                                    new SelectListItem { Text = "Jun 22 2017 6:53AM", Value = "2"}
                           }, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.dateTime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row text-center">
                    <input type="submit" value="Email" name="Email" class="btn btn-default" />
                    <input type="submit" value="Print" name="Print" class="btn btn-default" />
                </div>
            </div>

        </div>
    </div>
    <div class="col-md-2"></div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
