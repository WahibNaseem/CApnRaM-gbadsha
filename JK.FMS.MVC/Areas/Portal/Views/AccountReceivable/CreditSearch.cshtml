@model JKViewModels.AccountReceivable.CreditsSearchViewModel

@{
    ViewBag.Title = "CreditSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style type="text/css">
    </style>
}

<div class="custom-form portlet light" style="max-width:420px;margin: 0px auto;padding:0;min-height: 100px;">

    @using (Html.BeginForm("CreditSearch", "AccountReceivable", FormMethod.Post, new { @id = "form_wizard_1", @role = "form", @class = "form form-horizontal" }))
        {
        <div class="headerbox">
            <div class="row">
                &nbsp;
            </div>
        </div>

        <div class="portlet-body form">
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-4 text-right">
                                @Html.LabelFor(model => model.searchBy, new { @class = "control-label text-center" })
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(model => model.searchBy, new List<SelectListItem> {
                                 new SelectListItem { Text = "-Select One-", Value = "-1"},
                                    new SelectListItem { Text = "Customer", Value = "1"},
                                    new SelectListItem { Text = "Invoice No", Value = "2"}
                           }, new { @class = "form-control  input-sm" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-4 text-right">
                                @Html.LabelFor(model => model.searchValue, new { @class = "control-label text-center" })
                            </div>
                            <div class="col-md-7">
                                @Html.TextBoxFor(model => model.searchValue, new { @class = "form-control input-sm" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-4 text-right">
                                @Html.LabelFor(model => model.billMonth, new { @class = "control-label " })
                            </div>
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => model.billMonth, new SelectList(ViewBag.billMonthsList, "Value", "Text"), "-Select-", new { @class = "form-control input-sm" })
                            </div>
                            <div class="col-md-3">
                                @Html.DropDownListFor(model => model.billYear, new SelectList(ViewBag.billYearList, "Value", "Text"), "-Select-", new { @class = "form-control input-sm" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">

                <div class="col-md-11">
                    <button type="submit" class="btn btn-primary button-next pull-right">Search</button>
                </div>
            </div>
        </div>
        }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}