

@model IEnumerable<JKViewModels.ChartDetailsViewModel>

@{
    int i = 0;
    decimal total = 0;
}

@{
    if (Model.Any())
    {

        <div class="table-responsive" style="margin-left:5px;margin-right:5px;">
            <table class="table table-striped table-bordered table-hover order-column" id="tblDetails21">
                <thead>
                    <tr>
                        <th style="text-align:center;width:20px;">SL</th>
                        <th style="text-align:center;width:90px;">
                            Region Name
                        </th>
                        <th style="text-align:center;width:200px;">
                            Selected Type
                        </th>
                        <th style="text-align:center;width:100px;">
                            Customer No
                        </th>
                        <th style="text-align:center;width:320px;">
                            Customer Name
                        </th>
                        <th style="text-align:center;width:200px;">
                            Total Revenues
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        total = total + item.Total;
                        i = i + 1;
                        <tr>
                            <td style="text-align:right;">@i</td>
                            <td style="text-align:center;">@item.RegionName</td>
                            <td style="text-align:center;">@item.RangeName</td>
                            <td style="text-align:center;">@item.CustomerNo</td>
                            <td style="text-align:center;">@item.CustomerName</td>
                            <td style="text-align:right;">@String.Format("{0:C}", item.Total)</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr style="background:#95a5a6;color:white;">
                        <td colspan="5" style="width:530px;text-align:center;"><strong>Total:</strong> </td>
                        <td style="text-align:right;width:200px;"><strong>@String.Format("{0:C}", total)</strong> </td>
                    </tr>
                </tfoot>
            </table>
        </div>

    }
    else
    {
        <div class="row">
            <div class="col-lg-12">
                No Data Found....
            </div>
        </div>
    }

}

<script type="text/javascript">
    $(document).ready(function () {
        $("#tblDetails21").dataTable();
    });
</script>

