@model List<JKViewModels.Customer.DistributionFeesDetailModel>

<div class="modal-header headerbox list" style="padding:0px!important;border-bottom: none;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-top: 12px !important;margin-right: 12px !important;"></button>
    <h4 class="modal-title" style="margin-top: 0px; margin-bottom: 4px;  padding: 7px!important;font-size: 12px;font-weight: bold;background: #3598DC !important;color: #FFF !important;border: 1px solid #3598DC !important;padding: 0px;border-radius: 8px 8px 0 0;text-transform: uppercase;">
        Fees
    </h4>
</div>
<div class="modal-body" style="padding: 0px">
    <div style="max-width: 98%;margin: 0px auto;">
        <div class="custom-form portlet light">
            <div class="portlet-body form">
                <div class="form-body-outer" style="padding: 0px;">
                    <div style="overflow:auto;width: 100%; margin: 0em auto;">
                        <div class="form-group">
                            <table class="table table-striped table-bordered table-hover order-column">
                                <thead>
                                    <tr style="background-color: #e8e8e8;font-weight: bold;font-size:12px !important;">
                                        <td style="font-size:12px !important;">
                                            Fee Name
                                        </td>
                                        <td style="font-size:12px !important;">
                                            Type
                                        </td>
                                        <td style="width:50px;font-size:12px !important;" >
                                            Amount
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr >
                                            <td style="vertical-align: middle;font-size:12px !important;">@item.Name</td>
                                            <td style="vertical-align: middle;font-size:12px !important;">@item.Rate</td>
                                            <td style="vertical-align: middle;font-size:12px !important;">@item.Amount</td>
                                       </tr>
                                   }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

