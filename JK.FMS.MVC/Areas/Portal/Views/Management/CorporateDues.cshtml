@model JKViewModels.Management.CorporateDuesViewModel
@{
    ViewBag.Title = "CorporateDues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    }



<div class="custom-form portlet light" style="max-width:460px;margin: 0px auto;padding:0;min-height: 100px;">
    <div class="headerbox">
        <div class="row">

            &nbsp;
        </div>
    </div>
    <div class="portlet-body form">
       @using (Html.BeginForm("CorporateDues", "Management", FormMethod.Post,new { @class = "form-horizontal" }))
       {
        @Html.AntiForgeryToken()

           List<SelectListItem> billMonthsList = (List<SelectListItem>)ViewBag.billMonthsList;
           List<SelectListItem> billYearList = (List<SelectListItem>)ViewBag.billYearList;
            <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-4" style="padding-top:0px">
                            @Html.LabelFor(model => model.billMonth, new { @class = "control-label" })
                            <span class="required">*</span>
                    </label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.billMonth, billMonthsList,  new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.billMonth, "", new { @class = "text-danger" })


                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.billYear, billYearList , new { @class = "form-control input-sm" })
                        @Html.ValidationMessageFor(model => model.billYear, "", new { @class = "text-danger" })
                    </div>
                </div>
