                    </label>
                    <div class="col-md-5">
                        <input type="text" name="For" id="For" value="" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">
                        Status
                    </label>
                    <div class="col-md-4">
                        @Html.DropDownList("Status", new SelectList(ViewBag.Status, "Value", "Text"), new { @class = "form-control input-sm" })
                    </div>

                </div>*@
            </div>
            <div class="form-actions">

                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary button-next pull-right" style="margin-right:10px;">Generate</button>
                </div>

            </div>
       }
    </div>
</div>

  

