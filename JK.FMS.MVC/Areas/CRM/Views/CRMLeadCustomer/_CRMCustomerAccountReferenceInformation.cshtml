            <!-- Sales Volume -->
            @*<div class="form-group">
                    <label for="input_salesvolume" class="control-label col-md-4 reference-label">Sales Volume:</label>
                    <div class="col-md-8">
                        @Html.TextBox("salesvolume", Model.SalesVolume, new { @class = "form-control input-sm", @id = "input_salesvolume" })
                    </div>
                </div>*@

            <!-- Company Fax Number -->
            @*<div class="form-group">
                    <label for="input_companyfaxnumber" class="control-label col-md-4 reference-label">@JKCRMResource.fax:</label>
                    <div class="col-md-8">
                        @Html.TextBox("faxnumber", Model.CompanyFaxNumber, new { @class = "form-control input-sm", @id = "input_companyfaxnumber" })
