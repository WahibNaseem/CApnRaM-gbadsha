@using JK.Resources
@model JKViewModels.CRM.CRMAccountCustomerDetailViewModel



<form action="#" id="form_referenceinfo" class="form-horizontal">
    <div class="form-body">
        <div id="lead_Id" style="padding-top:0px; margin-top:-10px;">
            <h5 class="sbold uppercase"><b style="font-size:18px;">Lead #:</b> @Html.Label(Model.CRM_AccountId.ToString() , new { id = "crm_accountId" , @style="font-size:16px;"})</h5>
        </div>

        <div style="margin-top:16px;">
            <button id="contactinfo_cancel_btn" type="button" class="btn green btn-sm " style="width:70px; margin-top:-8px; display:none">Cancel</button>
            <button id="contactinfo_edit_btn" type="button" class="btn green btn-sm pull-right" style="width:70px; margin-top:-8px;">Edit</button>

            <!-- COMPANY INFO SECTION -->
            <h5 class="form-section sbold uppercase"><b>@JKCRMResource.companyinfo:</b></h5>

            <!-- Company Name -->
            <div class="form-group">
                <label for="input_companyname" class="control-label col-md-3 reference-label">@JKCRMResource.name<span class="required">*</span>:</label>
                <div class="col-md-9">
                    @Html.TextBox("company", Model.CompanyName, new { @class = "form-control input-sm", @id = "input_companyname", @name = "name" })
                </div>
            </div>

            <!-- Company Phone Number -->
            <div class="form-group">
                <label for="input_companyphonenumber" class="control-label col-md-3 reference-label">@JKCRMResource.phone<span class="required">*</span>:</label>
                <div class="col-sm-5 col-md-5 col-lg-5" style="padding-right:0px;">
                    @Html.TextBox("companyphonenumber", Model.CompanyPhoneNumber, new { @class = "form-control input-sm", @id = "input_companyphonenumber", @name = "number" })
                </div>
                <div class="col-lg-3 col-md-3 col-sm-2 ">
                    <button id="call_btn" type="button" class="btn blue btn-sm btn-call" style="width:70px;">Call</button>
                </div>
            </div>

            <!-- Company Website -->
            @*<div class="form-group">
                    <label for="input_companywebsite" class="control-label col-md-4 reference-label">@JKCRMResource.website:</label>
                    <div class="col-md-8">
                        @Html.TextBox("website", Model.CompanyWebSite, new { @class = "form-control input-sm", @id = "input_companywebsite" })
                    </div>
                </div>*@



            <!-- Number of Locations -->
            @*<div class="form-group">
