                        @Html.TextBox("lastname", Model.LastName, new { @class = "form-control input-sm", @id = "input_contactlastname" })
                    </div>
                </div>*@

            <!-- Contact Phone Number -->
            <div class="form-group">
                <label for="input_contactphonenumber" class="control-label col-md-3 reference-label">@JKCRMResource.phone<span class="required">*</span>:</label>
                <div class="col-md-9">
                    @Html.TextBox("phonenumber", Model.PhoneNumber, new { @class = "form-control input-sm", @id = "input_contactphonenumber", @name = "number" })
                </div>
            </div>

            <!-- Contact Email Address -->
            <div class="form-group">
                <label for="input_contactemail" class="control-label col-md-3 reference-label">@JKCRMResource.email:</label>
                <div class="col-md-9">
                    @Html.TextBox("contactEmail", Model.EmailAddress, new { @class = "form-control input-sm", @id = "input_contactemail", type = "email", @name = "email" })
                </div>
            </div>


            <!-- ADDRESS SECTION -->
            <h5 class="form-section sbold uppercase"><b>@JKCRMResource.address:</b></h5>

            <!-- Address Line 1 -->
            <div class="form-group">
                <label for="input_addressline1" class="control-label col-md-4 reference-label" style="margin-left:-15px;">@JKCRMResource.address1<span class="required">*</span>:</label>
                <div class="col-md-8" style="padding-left:0px; padding-right:0px;">
                    @Html.TextBox("addessline1", Model.CompanyAddressLine1, new { @class = "form-control input-sm", @id = "input_addressline1", @name = "name" })
                </div>
            </div>

            <!-- Address Line 2 -->
            <div class="form-group">
                <label for="input_addressline2" class="control-label col-md-3 reference-label">@JKCRMResource.address2:</label>
                <div class="col-md-9">
                    @Html.TextBox("addessline2", Model.CompanyAddressLine2, new { @class = "form-control input-sm", @id = "input_addressline2" })
                </div>
            </div>

            <!-- City -->
            <div class="form-group">
                <label for="input_city" class="control-label col-md-3 reference-label">@JKCRMResource.city<span class="required">*</span>:</label>
                <div class="col-md-9">
                    @Html.TextBox("city", Model.CompanyCity, new { @class = "form-control input-sm", @id = "input_city", @name = "name" })
                </div>
            </div>

            <!-- County -->
            @*<div class="form-group">
                    <label for="input_county" class="control-label col-md-4 reference-label">@JKCRMResource.county:</label>
