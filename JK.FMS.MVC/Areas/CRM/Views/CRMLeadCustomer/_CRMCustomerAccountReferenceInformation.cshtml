                    <div class="col-md-8">
                        @Html.TextBox("locations", Model.NumberOfLocations, new { @class = "form-control input-sm", @id = "input_numberoflocations" })
                    </div>
                </div>*@

            <!-- SqFt -->
            @*<div class="form-group">
                    <label for="input_sqft" class="control-label col-md-4 reference-label">SqFt:</label>
                    <div class="col-md-8">
                        @Html.TextBox("sqft", Model.SqFt, new { @class = "form-control input-sm", @id = "input_sqft" })
                    </div>
                </div>*@

            <!-- Line of Business -->
            @*<div class="form-group">
                    <label for="input_lineofbusiness" class="control-label col-md-4 reference-label">Line of Business:</label>
                    <div class="col-md-8">
                        @Html.TextBox("lineofbusiness", Model.LineofBusiness, new { @class = "form-control input-sm", @id = "input_lineofbusiness" })
                    </div>
