                        @Html.TextBox("county", Model.CompanyCounty, new { @class = "form-control input-sm", @id = "input_county" })
                    </div>
                </div>*@

            <!-- State -->
            <div class="form-group">
                <label for="select_state" class="control-label col-md-3 reference-label">@JKCRMResource.state<span class="required">*</span>:</label>
                <div class="col-md-9">
                    @Html.DropDownList("states", (SelectList)ViewBag.State, "Select", new { @class = "form-control input-sm", @id = "select_state" })
                </div>
            </div>

            <!-- ZipCode -->
            <div class="form-group">
                <label for="input_zipcode" class="control-label col-md-3 reference-label">@JKCRMResource.zipCode<span class="required">*</span>:</label>
                <div class="col-md-9">
                    @Html.TextBox("zipcode", Model.CompanyZipCode, new { @class = "form-control input-sm", @id = "input_zipcode", @name = "number", maxlength = "5" })
                </div>
            </div>
        </div>
    </div>
</form>
