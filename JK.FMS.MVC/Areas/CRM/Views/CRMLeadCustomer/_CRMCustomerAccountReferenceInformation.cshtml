            <!-- CONTACT SECTION -->
            <h5 class="form-section sbold uppercase"><b>@JKCRMResource.contact:</b></h5>

            <!-- Contact Title -->
            <div class="form-group">
                <label for="input_title" class="control-label col-md-3 reference-label">Title:</label>
                <div class="col-md-9">
                    @Html.TextBox("title", Model.Title, new { @class = "form-control input-sm", @id = "input_title" })
                </div>
            </div>

            <!-- Contact First Name -->
            <div class="form-group">
                <label for="input_contactname" class="control-label col-md-3 reference-label">Name<span class="required">*</span>:</label>
                <div class="col-md-9">
                    @Html.TextBox("contactname", Model.ContactName, new { @class = "form-control input-sm", @id = "input_contactname", @name = "name" })
                </div>
            </div>

            <!-- Contact Last Name -->
            @*<div class="form-group">
                    <label for="input_contactlastname" class="control-label col-md-4 reference-label">@JKCRMResource.lastname<span class="required">*</span>:</label>
