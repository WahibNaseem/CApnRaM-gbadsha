@model JKViewModels.CRM.CRMLeadGenerationViewModel
@using JKViewModels.CRM


 
@{ 
    /*Getting schedule out from the ViewBag*/
    var schedulevm = new CRMScheduleViewModel();
    if(ViewBag.Schedule != null){
        schedulevm = (CRMScheduleViewModel)ViewBag.Schedule;
    }
}

<div class="modal-header modal-custom-header" id="potentialinquary_modalview_header">
    <button type="button" class="close modal-close-button" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">Potential/Inquary</h4>
</div>


<div class="modal-body" id="potentialinquary_modalview_body">
    <div class="row">
        <form action="#" id="form_potentialinquary" class="form-horizontal">
            <div class="form-body">
                <!-- Name -->
                <div class="form-group">
                    <label class="control-label col-md-4">Name<span class="required">*</span>:</label>
                    <div class="col-md-6">
                        @*<input id="inputname_modal" name="name" type="text" data-required="1" class="form-control input-sm" value="@Model.Name" disabled="disabled" />*@
                        @Html.TextBoxFor(x=>x.Name,Model.Name,new { @class = "form-control input-sm", @name="name",@disabled="disabled",@data_required="1" })
                    </div>
                </div>

                <!-- Address -->
                <div class="form-group">
                    <label class="control-label col-md-4">Address<span class="required">*</span>:</label>
                    <div class="col-md-6">
                        @*<input id="inputaddress_modal" name="name" type="text" data-required="1" class="form-control input-sm" value="@Model.Address" disabled="disabled" />*@
                        @Html.TextBoxFor(x=>x.Address , Model.Address, new { @class = "form-control input-sm", @name = "name", @disabled = "disabled", @data_required = "1" })
                    </div>
                </div>

                <!-- City -->
                <div class="form-group">
                    <label class="control-label col-md-4">City<span class="required">*</span>:</label>
                    <div class="col-md-6">
                        @*<input id="inputcity_modal" name="name" type="text" data-required="1" class="form-control input-sm" value="@Model.City" disabled="disabled" />*@
                        @Html.TextBoxFor(x => x.City, Model.City, new { @class = "form-control input-sm", @name = "name", @disabled = "disabled", @data_required = "1" })

                    </div>
                </div>

                <!-- ZipCode -->
                <div class="form-group">
                    <label class="control-label col-md-4">ZipCode<span class="required">*</span>:</label>
                    <div class="col-md-6">
                        @*<input id="inputzipcode_modal" name="name" type="text" data-required="1" class="form-control input-sm" value="@Model.ZipCode" disabled="disabled" />*@
                        @Html.TextBoxFor(x => x.ZipCode, Model.ZipCode, new { @class = "form-control input-sm", @name = "name", @disabled = "disabled", @data_required = "1" })
                    </div>
                </div>

                <!-- Contact Person -->
                <div class="form-group">
                    <label class="control-label col-md-4">Contact Person<span class="required">*</span>:</label>
                    <div class="col-md-6">
                        @*<input id="inputcontactperson_modal" name="name" type="text" data-required="1" class="form-control input-sm" value="@Model.ContactPerson" disabled="disabled" />*@
                        @Html.TextBoxFor(x => x.ContactPerson, Model.ContactPerson, new { @class = "form-control input-sm", @name = "name", @disabled = "disabled", @data_required = "1" })
                    </div>
                </div>

                <!-- Phone Number -->
                <div class="form-group">
                    <label class="control-label col-md-4">Phone Number<span class="required">*</span>:</label>
                    <div class="col-md-6">
                        <input id="PhoneNumber" name="name" type="text" data-required="1" class="form-control input-sm" value="@String.Format("{0:(###) ###-####}",(Model.PhoneNumber != "" ? Convert.ToDecimal(Model.PhoneNumber) : 0))" disabled="disabled" data_required = "1"/>
                        @*@Html.TextBoxFor(x => x.PhoneNumber, Model.PhoneNumber, new { @class = "form-control input-sm", @name = "name", @disabled = "disabled", @data_required = "1" })*@
                    </div>
                </div>

                <!-- Start Date - Time  -->
                <div class="form-group">
                    <label class="control-label col-md-4">Start Date/Time<span class="required">*</span>:</label>
                    <div class="col-md-3">
                        <input type="text" class="form-control input-mysize input-group input-group-sm input-sm date date-picker RemovePeriodvalidation" name="datepicker" data-date-format="mm/dd/yyyy"
                               id="input_startdate_modal" value="@(schedulevm.StartDate != null ? Convert.ToDateTime(schedulevm.StartDate).ToString("MM-dd-yyyy") :string.Empty)" disabled="disabled" />
                        <!--Start Time-->

                    </div>
                    <div class="col-md-3">
                        <div class="input-icon">
                            <i class="fa fa-clock-o" style="margin-top:7px;"></i>
                            <input type="text" class="form-control input-group input-mysize2 input-group-sm input-sm  timepicker timepicker-default" id="input_starttime_modal" value="@(schedulevm.StartDate != null ? Convert.ToDateTime(schedulevm.StartDate).ToString("hh:mm tt") :string.Empty)" disabled="disabled">
                        </div>
                    </div>
                </div>

                <!--End Date/Time-->
                <div class="form-group">
                    <label class="control-label col-md-4">End Date/Time<span class="required">*</span>:</label>

                    <div class="col-md-3">
                        <input type="text" class="form-control input-mysize input-group input-group-sm input-sm date date-picker RemovePeriodvalidation" name="datepicker" data-date-format="mm/dd/yyyy" id="input_enddate_modal" value="@(schedulevm.EndDate != null ? Convert.ToDateTime(schedulevm.EndDate).ToString("MM-dd-yyyy") :string.Empty)" disabled="disabled" />
                    </div>
                    <!--End Time-->
                    <div class="col-md-3">
                        <div class="input-icon">
                            <i class="fa fa-clock-o" style="margin-top:7px;"></i>
                            <input type="text" class="form-control input-group input-mysize2 input-group-sm input-sm  timepicker timepicker-default" id="input_endtime_modal" value="@(schedulevm.EndDate != null ? Convert.ToDateTime(schedulevm.EndDate).ToString("hh:mm tt") :string.Empty)" disabled="disabled" />
                        </div>
                    </div>
                </div>

                <!-- Purpose -->
                <div class="form-group">
                    <label class="control-label col-md-4">Purpose:</label>
                    <div class="col-md-6">
                        @Html.DropDownList("PotentialInquaryPurpose", (SelectList)ViewBag.PotentialInquaryPurpose, "Select", new { @id = "selectpotentialinquary_schedulepurpose_modal", @class = "form-control input-sm", @name = "options2", @disabled = "disabled" })
                        @*<select id="selectpotentialinquary_schedulepurpose_modal" class="form-control input-sm" name="options2" disabled="disabled">
                            <option value="">Select..</option>
                            <option value="1" @(schedulevm.PurposeId == 1 ? "selected=selected" : string.Empty)>First Visit</option>
                            <option value="2" @(schedulevm.PurposeId == 2 ? "selected=selected" : string.Empty)>Proposal Delivery</option>
                            <option value="3" @(schedulevm.PurposeId == 3 ? "selected=selected" : string.Empty)>Proposal Follow up</option>
                            <option value="4" @(schedulevm.PurposeId == 4 ? "selected=selected" : string.Empty)>Walk Thru</option>
                            <option value="5" @(schedulevm.PurposeId == 5 ? "selected=selected" : string.Empty)>Call Back</option>
                            <option value="6" @(schedulevm.PurposeId == 6 ? "selected=selected" : string.Empty)>Cold Call</option>
                            <option value="7" @(schedulevm.PurposeId == 7 ? "selected=selected" : string.Empty)>Prospecting Email</option>
                            <option value="8" @(schedulevm.PurposeId == 8 ? "selected=selected" : string.Empty)>Past Proposal </option>
                            <option value="9" @(schedulevm.PurposeId == 9 ? "selected=selected" : string.Empty)>Follow Up</option>
                        </select>*@
                    </div>
                </div>

                <!-- Note -->
                <div class="form-group">
                    <label for="schedule_purpose" class="control-label col-md-4">Note:</label>
                    <div class="col-md-6">
                        @*<textarea name="note" id="text_initialcommunicationmodal" class="form-control autosizeme" rows="6" style="font-size: 11px" disabled="disabled">@Model.Note</textarea>*@
                        @Html.TextArea("Note", Model.Note, new { @class = "form-control autosizeme", @rows = "6", @style = "font-size: 11px", @disabled = "disabled" })
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
