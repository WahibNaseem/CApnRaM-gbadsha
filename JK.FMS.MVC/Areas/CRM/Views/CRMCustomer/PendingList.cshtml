            url: sURL,
            contentType: "application/json; charset=utf-8",
            datatype: "json",
            success: function (data) {
                $('#RenderCustomerDistribution').html(data);
                $("#ModalCustomerDistributionPopup").modal({ resizable: true, draggable: true });


            },
            error: function (err) {
                console.log(err);
            }
        });
    }
