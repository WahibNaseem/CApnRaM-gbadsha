
@{
    ViewBag.Title = "CallBacksPending";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" role="form" id="form_CustomerReport" action="" method="post">
    <div class="custom-form portlet light">
        <div class="headerbox">
            <div class="row">
                <div class="col-md-12 text-center">
                    Call Back Report
                </div>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-5 control-label" style="padding-top:5px;">
                                Call Backs Due Thru:
                            </div>
                            <div class="col-md-2" style="padding-bottom: 5px;">
                                <div class="input-group " data-date-format="mm/dd/yyyy">
                                    <input class="form-control input-sm date-picker" type="text" />
                                    <span class="input-group-btn cal-btn">
                                        <button class="btn default cal-btn" type="button">
                                            <i class="fa fa-calendar"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-5 control-label" style="padding-top:5px;">
                                Group or User:
                            </div>
                            <div class="col-md-2" style="padding-bottom: 5px;">
                                <select id="" class="form-control input-sm">
                                    <option>All</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-5">
                            <div class="col-lg-offset-3">
                                <div class="input-group">
                                    <div class="icheck-inline" style="margin-top: 0px;">
                                        <label class="check-inline" style="margin-top: 6px;">
                                            <input type="radio" name="membership" value="1" class="i-checks" />
                                            <span>Summary view </span>
                                        </label>

                                        <label class="check-inline" style="margin-top: 6px;">
                                            <input type="radio" name="membership" value="0" class="i-checks" />
                                            <span>Detail view </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-12 text-right" style="padding-right: 0px;">
                        <div class="col-md-1 col-md-offset-11" style="padding-left: 0px;">
                            <a class="btn btn-primary button-next col-md-11" onclick="location.href='@Url.Action("CallBacksPendingReport", "CRMReport", new { area = "CRM" })'">Submit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
