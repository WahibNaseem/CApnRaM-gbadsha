
@{
    ViewBag.Title = "InactiveAppointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" role="form" id="form_CustomerReport" action="" method="post">
    <div class="custom-form portlet light">
        <div class="headerbox">
            <div class="row">
                <div class="col-md-12 text-center">
                    Inactive Customer Lead Appointments
                </div>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-4 pnd5 control-label" style="padding-top:5px;">
                                Appointment Type: 
                            </div>
                            <div class="col-md-3" style="padding-bottom: 5px;">
                                <select class="form-control input-sm">
                                    <option value="1" selected="selected">First Visit</option>
                                    <option value="2">Proposals</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-4 pnd5 control-label" style="padding-top:5px;">
                                Group By:
                            </div>
                            <div class="col-md-3" style="padding-bottom: 5px;">
                                <select class="form-control input-sm">
                                    <option value="1" selected="selected">Sales Person</option>
                                    <option value="2">Zip Code Group</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-5">
                            <div class="col-lg-offset-3">
                                <div class="input-group">
                                    <div class="icheck-inline" style="margin-top: 0px;">
                                        <label class="check-inline" style="margin-top: 6px;">
                                            <input type="radio" name="membership" value="1" class="i-checks" />
                                            <span>Summary view </span>
                                        </label>

                                        <label class="check-inline" style="margin-top: 6px;">
                                            <input type="radio" name="membership" value="0" class="i-checks" />
                                            <span>Detail view </span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-12 text-right" style="padding-right: 0px;">
                        <div class="col-md-1 col-md-offset-9" style="padding-left: 0px;">
                            <input type="submit" class="btn btn-primary button-next col-md-11" value="Submit" id="btnSubmit" />
                        </div>
                        <div class="col-md-1" style="padding-left: 0px;">
                            <input type="submit" class="btn btn-primary button-next col-md-11" value="Reset" id="btnReset" />
                        </div>
                        <div class="col-md-1" style="padding-left: 0px;">
                            <input type="submit" class="btn btn-primary button-next col-md-11" value="Home" id="btnHome" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

