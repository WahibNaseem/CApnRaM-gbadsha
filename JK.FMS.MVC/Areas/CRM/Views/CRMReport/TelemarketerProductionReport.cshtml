
@{
    ViewBag.Title = "TelemarketerProductionReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-horizontal" role="form" id="form_CustomerReport" action="" method="post">
    <div class="custom-form portlet light">
        <div class="headerbox">
            <div class="row">
                <div class="col-md-12 text-center">
                    Telemarketing Production Report<br />
                    Date Range 1/1/2017 to 1/11/2018
                </div>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <span style="color:red;">Inactive users listed in red.</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover order-column" cellSpacing=1 cellPadding=1 border=0 style="margin-top:0 !important;" id="tblcall">
                                    <thead>
                                        <tr>
                                            <th colSpan=4 style="text-align:center;">&nbsp;</th>
                                            <th colSpan=2 style="text-align:center;">Averages</th>
                                        </tr>
                                        <tr>
                                            <th style="text-align:center;">Telemarketer</th>
                                            <th width="15%" style="text-align:center;">Hours Worked</th>
                                            <th width="15%" style="text-align:center;">Calls Made</th>
                                            <th width="15%" style="text-align:center;">Appts. Set</th>
                                            <th width="15%" style="text-align:center;">Calls/Hour</th>
                                            <th width="15%" style="text-align:center;"> Hours/Appt</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="text-align:center;">Rosamond Scoma</td>
                                            <td style="text-align:center;">1</td>
                                            <td style="text-align:center;">15789</td>
                                            <td style="text-align:center;">185</td>
                                            <td style="text-align:center;">15,789.00</td>
                                            <td style="text-align:center;">0.01</td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr style="background: #95a5a6;color: white;">
                                            <td style="text-align:center;"></td>
                                            <td style="text-align:center;">1</td>
                                            <td style="text-align:center;">15789</td>
                                            <td style="text-align:center;">185</td>
                                            <td style="text-align:center;">15,789.00</td>
                                            <td style="text-align:center;">0.01</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section scripts{
    <script>
        jQuery(document).ready(function () {
            $('#tblcall').dataTable({
                "bAutoWidth": false,
                "bSort": false,
                "order": true,
                "iDisplayLength": 25,
                "aLengthMenu": [[5, 7, 10, 25, 50, -1], [5, 7, 10, 25, 50, "All"]],
                "dom": "<'table-responsive't><'bottom'ip><'clear'>",
                "aaSorting": [[0, "desc"]],
            });
        });
    </script>
}
