                                <div class="form-group">
                                    <label for="select_providertype" class="control-label col-md-4">AE OR TM Phone Call:</label>
                                    <div class="col-md-6">
                                        @*@Html.DropDownList("providertype", (SelectList)ViewBag.ProviderTypeList, new { @class = "form-control input-sm", @id = "select_providertype" })*@
                                        @Html.TextBox("_budgetamount", "", new { @class = "form-control input-sm", @id = "input_budgetamountt" })
                                    </div>
                                </div>
                                <!-- Current Provider -->
                                <div class="form-group">
                                    <label for="select_providersource" class="control-label col-md-4">Identify Decision Maker:</label>
                                    <div class="col-md-6">
                                        @*@Html.DropDownList("providersource", (SelectList)ViewBag.ProviderSourceList, new { @class = "form-control input-sm", @id = "select_providersource" })*@
                                        @Html.TextBox("_budgetamount", "", new { @class = "form-control input-sm", @id = "input_budgetamountt" })
