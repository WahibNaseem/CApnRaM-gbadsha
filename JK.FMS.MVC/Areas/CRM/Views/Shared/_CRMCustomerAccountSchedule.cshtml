                                        @*@Html.TextBox("_budgetamount", "$50,000", new { @class = "form-control input-sm", @id = "input_budgetamount" })*@
                                        <select id="select_assignee" class="form-control input-sm">
                                            <option value="1">Positive</option>
                                            <option value="2">Negative</option>
                                        </select>
                                    </div>
                                </div>
                                <h5 class="form-section sbold uppercase"><b>@JKCRMResource.note:</b></h5>
                                <!-- Note -->
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.TextArea("note", "", new { @class = "form-control autosizeme", rows = "10", style = "font-size: 11px", @id = "text_leadgeneralnote" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row" id="summary_action">
                                    <div class="col-md-3 pull-right">
                                        <button id="savesummary_button" type="button" class="btn green btn-block" onclick="saveSummaryData();">@CommonResource.btnSave</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





<!-- Add Schedule Modal View -->
<div class="modal fade" id="addSchedules_modalview" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" id="addschedule_modalview_header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="resetAddScheduleForm();"></button>
                <h4 class="modal-title">Add New Schedule</h4>
            </div>
            <div class="modal-body" id="addschedule_modalview_body">
                <div class="row">
                    <form action="#" id="addSchedule_form">
                        <div class="form-body">
                            <div class="col-md-12">
                                <div class="col-md-12">
                                    <!--Schedule Title-->
                                    <div class="form-group">
                                        <label for="form_title" class="control-label col-md-3 input-sm text-right">Title<span class="required">*</span>:</label>
                                        <div class="col-md-8">
                                            <input id="input_scheduletitle" name="name" type="text" data-required="1" class="form-control input-sm" placeholder="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!--Description-->
                            <div class="col-md-12">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="form_description" class="control-label col-md-3 input-sm text-right">Description:</label>
                                        <div class="col-md-8">
                                            <textarea id="input_scheduledescription" class="form-control input-sm" rows="6"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <!-- Start -->
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="form_startdate" class="control-label col-md-3 input-sm text-right">Start<span class="required"></span>:</label>
                                        <div class="col-md-8 mt-picker-top">
                                            <div class="input-group input-group-sm date form_datetime bs-datetime ">
                                                <input id="select_schedulestartdate" type="text" size="16" class="form-control" aria-describedby="sizing-addondstart">
                                                <span class="input-group-addon" id="sizing-addondstart">
                                                    <button class="default date-set" type="button">
                                                        <i class="fa fa-calendar"></i>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <!--Duration-->
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="form_duration" class="control-label col-md-3 input-sm text-right">Duration:</label>
                                        <div class="col-md-8">
                                            <select id="select_scheduleduration" class="form-control select2 input-sm">
                                                <option></option>
                                                <option value="1">1 Hour</option>
                                                <option value="2">2 Hours</option>
                                                <option value="3">3 Hours</option>
                                                <option value="4">4 Hours</option>
                                                <option value="5">5 Hours</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer" id="addschedule_modalview_footer">
                <button id="cancel_addschedule_button" type="button" class="btn btn-default" data-dismiss="modal" onclick="resetAddScheduleForm();">Cancel</button>
                <button id="addschedule_button" type="button" class="btn btn-success" onclick="saveScheduleData();">Create Schedule</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
</div>
