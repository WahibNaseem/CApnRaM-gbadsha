
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/JKControl/Views/Shared/_Layout.cshtml";
}


@using JKApi.Core.Common

@{
    ClaimView claimView = ClaimView.Instance;
    var userViewModel = claimView.GetCLAIM_PERSON_INFORMATION();
    var selectedCompanyId = claimView.GetCLAIM_SELECTED_COMPANY_ID();
}


@if (userViewModel != null && userViewModel.Regions != null && userViewModel.Regions.Count > 0)
{
    <div class="row">
        @for (int i = 0; i < userViewModel.Regions.Count; i++)
        {
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                @if (userViewModel.Regions[i].RegionUniqueID == selectedCompanyId)
                {
                    <a class="dashboard-stat dashboard-stat-v2 green" href="@Url.Action("ChangeCompany", "JKHome", new { area = "JKControl", prm = userViewModel.Regions[i].RegionUniqueID })">
                        <div class="visual">
                            <i class="fa fa-comments"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                @userViewModel.Regions[i].DisplayName
                            </div>
                            <div class="desc">  </div>
                        </div>
                    </a>
                }
                else
                {
                    <a class="dashboard-stat dashboard-stat-v2 blue" href="@Url.Action("ChangeCompany", "JKHome", new { area = "JKControl", prm = userViewModel.Regions[i].RegionUniqueID })">
                        <div class="visual">
                            <i class="fa fa-comments"></i>
                        </div>
                        <div class="details">
                            <div class="number">
                                @userViewModel.Regions[i].DisplayName
                            </div>
                            <div class="desc">  </div>
                        </div>
                    </a>
                }
            </div>
        }

    </div>
    <div class="clearfix"></div>
}

