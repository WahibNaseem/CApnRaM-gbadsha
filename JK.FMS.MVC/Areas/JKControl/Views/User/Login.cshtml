@model JKViewModels.UserLoginViewModel

@{
    ViewBag.Title = @JK.Resources.JKHomeResource.titleLginPage;
    Layout = "~/Areas/JKControl/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form", @id = "frmLogin" }))
{
    @Html.AntiForgeryToken()

    <h3 class="form-title font-green">@JK.Resources.JKHomeResource.lblSignIn</h3>
    <div class="alert alert-danger display-hide">
        <button class="close" data-close="alert"></button>
        <span> @JK.Resources.JKHomeResource.msgErrorUsernamePassword </span>
    </div>
    if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-danger display-show">
            <button class="close" data-close="alert"></button>
            <span> @Model.ErrorMessage </span>
        </div>
    }
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">@JK.Resources.JKHomeResource.lblUsername</label>
        @Html.TextBoxFor(m => m.Username, new { @id = "txtLogin", @class = "form-control form-control-solid placeholder-no-fix", @autocomplete = "off", @placeholder = @JK.Resources.JKHomeResource.lblUsername, @name = "username" })
    </div>
    <div class="form-group">
        <label class="control-label visible-ie8 visible-ie9">@JK.Resources.JKHomeResource.lblPassword</label>
        @Html.PasswordFor(m => m.Password, new { @id = "txtPassword", @maxlength = "20", @class = "form-control form-control-solid placeholder-no-fix", @autocomplete = "off", @placeholder = @JK.Resources.JKHomeResource.lblPassword, @name = "password" })
    </div>
    <div class="form-actions">
        <button type="submit" class="btn green uppercase">@JK.Resources.JKHomeResource.lblLogin</button>
        <label class="rememberme check mt-checkbox mt-checkbox-outline">
            @Html.CheckBoxFor(m => m.RememberMe, new { @id = "chkRememberMe", @name = "remember", @value = "1" })@JK.Resources.JKHomeResource.lblRemember
            <span></span>
        </label>
        <a href="javascript:;" id="forget-password" class="forget-password">@JK.Resources.JKHomeResource.lblForgodPassword</a>
    </div>
}

@using (Html.BeginForm("ForgotPassword", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "forget-form" }))
{
    @Html.AntiForgeryToken()

    <h3 class="font-green">@JK.Resources.JKHomeResource.lblForgodPassword</h3>
    <p> @JK.Resources.JKHomeResource.lblForgotPasswordTopText </p>
    <div class="form-group">
        <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="@JK.Resources.JKHomeResource.lblEmail" name="email">
    </div>
    <div class="form-actions">
        <button type="button" id="back-btn" class="btn green btn-outline">@JK.Resources.CommonResource.btnBack</button>
        <button type="submit" class="btn btn-success uppercase pull-right">@JK.Resources.CommonResource.btnSubmit</button>
    </div>
}



